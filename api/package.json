{
  "name": "bookmarkr-api",
  "version": "1.0.0",
  "main": "dist/App.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "serve": "tsc -w | nodemon --watch dist",
    "test": "tslint 'src/**/*.ts' && jest",
    "lint": "tslint 'src/**/*.ts'"
  },
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "testPathIgnorePatterns": [
      "/dist/"
    ]
  }
}
